{
    "name": "locastic/sylius-comparer-plugin",
    "type": "sylius-plugin",
    "description": "Sylius plugin for comparing different products and allowing user to decide which product to put further in cart.",
    "license": "MIT",
    "authors": [
        {
            "name": "Locastic",
            "email": "info@locastic.com"
        }
    ],
    "require": {
        "php": "^7.1",

        "sylius/sylius": "^1.1",
        "sensio/generator-bundle": "^3.1"
    },
    "require-dev": {
        "behat/behat": "^3.3",
        "behat/mink": "^1.7",
        "behat/mink-browserkit-driver": "^1.3",
        "behat/mink-extension": "^2.2",
        "behat/mink-selenium2-driver": "^1.3",
        "friends-of-behat/context-service-extension": "^1.0",
        "friends-of-behat/cross-container-extension": "^1.0",
        "friends-of-behat/service-container-extension": "^1.0",
        "friends-of-behat/symfony-extension": "^1.0",
        "friends-of-behat/variadic-extension": "^1.0",
        "lakion/mink-debug-extension": "^1.2.3",
        "phpspec/phpspec": "^4.3",
        "phpstan/phpstan-shim": "^0.9.2",
        "phpunit/phpunit": "^6.5",
        "se/selenium-server-standalone": "^2.52",
        "sylius-labs/coding-standard": "^1.0",
        "symplify/easy-coding-standard": "^2.4"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Locastic\\SyliusComparerPlugin\\": "src/",
            "Tests\\Locastic\\SyliusComparerPlugin\\": "tests/"
        }
    },
    "autoload-dev": {
        "classmap": ["tests/Application/app/AppKernel.php"]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1-dev"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}